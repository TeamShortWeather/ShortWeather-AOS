<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="responseWeeklyWeather"
            type="org.shortweather.data.source.remote.ResponseWeeklyWeather" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_weekly_weather_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            app:layout_constraintEnd_toStartOf="@id/layout_weekly_weather_day_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_weekly_weather_calendar_week"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{responseWeeklyWeather.weeklyWeatherCalenderWeek}"
                android:textAppearance="@style/TextAppearance.ShortWeather.Subhead3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_weekly_weather_calendar_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@{responseWeeklyWeather.weeklyWeatherCalendarDay}"
                android:textAppearance="@style/TextAppearance.ShortWeather.Body2"
                app:layout_constraintStart_toStartOf="@id/tv_weekly_weather_calendar_week"
                app:layout_constraintTop_toBottomOf="@+id/tv_weekly_weather_calendar_week"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_weekly_weather_day_info"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/layout_weekly_weather_night_info"
            android:layout_height="wrap_content"
            android:layout_marginStart="68.5dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toEndOf="@id/layout_weekly_weather_calendar"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_weekly_weather_day_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/weekly_weather_content_description"
                android:src="@drawable/ic_weekly_weather_example"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="1dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="1dp"/>

            <TextView
                android:id="@+id/tv_weekly_weather_day_info"
                android:layout_width="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"
                android:text="@{responseWeeklyWeather.weeklyWeatherDayRain}"
                android:textAppearance="@style/TextAppearance.ShortWeather.caption1"
                android:textColor="@color/short_weather_gray_4"
                app:layout_constraintTop_toBottomOf="@id/iv_weekly_weather_day_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_weekly_weather_night_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toStartOf="@id/layout_weekly_weather_temp_info"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toEndOf="@id/layout_weekly_weather_day_info"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_weekly_weather_night_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/weekly_weather_content_description"
                android:src="@drawable/ic_weekly_weather_example"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="1dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="1dp"/>

            <TextView
                android:id="@+id/tv_weekly_weather_night_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{responseWeeklyWeather.weeklyWeatherNightRain}"
                android:textAppearance="@style/TextAppearance.ShortWeather.caption1"
                android:textColor="@color/short_weather_gray_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_weekly_weather_night_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_weekly_weather_temp_info"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/layout_weekly_weather_night_info"
            android:layout_marginTop="5dp"
            android:layout_marginStart="46dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toEndOf="@id/layout_weekly_weather_night_info">

            <TextView
                android:id="@+id/tv_weekly_weather_temp_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{responseWeeklyWeather.weeklyWeatherTempUp}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textAppearance="@style/TextAppearance.ShortWeather.Subhead2"
                android:textColor="@color/short_weather_gray_4"/>

            <TextView
                android:id="@+id/tv_weekly_weather_temp_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{responseWeeklyWeather.weeklyWeatherTempDown}"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/tv_weekly_weather_temp_up"
                android:textAppearance="@style/TextAppearance.ShortWeather.Subhead2"
                android:textColor="@color/short_weather_gray_7"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>